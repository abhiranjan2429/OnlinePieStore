@model ShoppingCartViewModel
@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li style="color: white;">
        <a class="btn " style="display: contents;text-decoration-line: none; color: aliceblue;"
           asp-controller="ShoppingCart"
           asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart" style="font-size: 22px;padding-top: 42%;"></span>
            <span id="cart-status">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}